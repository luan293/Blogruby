<%= form_for @post do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title, {required: true, minlength: 5} %>
    </p>
    <p>
      <%= f.label :content %><br>
      <%= f.text_area :content,class: "ckeditor", required: true%>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>