<%# if current_page?(root_path) || current_page?(post_path) %>
  <div class="search"> 
    <!-- :title la truong du lieu trong db can tim -->
    <%= search_form_for @search do |f| %>
      <%= f.search_field :title_cont %>
      <%= f.search_field :content_cont %>
      <%= f.submit %>
    <% end %>
   </div> 
<%#end %>
<% if current_page?(root_path) %>
  <%= sort_link(@search, :title) %>
  <% @posts.each do |p| %>
    <div class="post_wrapper">
      <h1 class="title"> <%=link_to p.title, p %> </h1>
      <p class="date"> Submitted <%= time_ago_in_words(p.created_at) %> ago </p> 
    </div> 
  <% end %>
  <div class="post_wrapper">
    <%= paginate @posts %>
  </div>
<% else %>
  <%= sort_link(@search, :title) %>
  <% @posts1.each do |p| %>
    <div class="post_wrapper">
      <h1 class="title"> <%=link_to p.title, p %> </h1>
      <p class="date"> Submitted <%= time_ago_in_words(p.created_at) %> ago </p> 
    </div> 
  <% end %>
  <div class="post_wrapper">
    <%= paginate @posts1 %>
  </div>
<% end %>
